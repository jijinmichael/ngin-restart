pipeline {
    agent any

    environment {
        SSH_HOST = "172.18.0.1"
        SSH_USER = "jijin"
    }

    stages {
        stage('Check Nginx Status on Host') {
            steps {
                script {
                    echo "🔍 Checking Nginx status on ${SSH_HOST}..."

                    def status = sh(
                        script: "ssh -o StrictHostKeyChecking=no ${SSH_USER}@${SSH_HOST} 'systemctl is-active nginx'",
                        returnStdout: true
                    ).trim()

                    if (status == "active") {
                        echo "✅ Nginx is running"
                    } else {
                        echo "❌ Nginx is NOT running (status: ${status})"
                    }
                }
            }
        }
    }

    post {
        success {
            echo "🎉 Pipeline completed"
        }
        failure {
            echo "💥 Pipeline failed"
        }
    }
}
